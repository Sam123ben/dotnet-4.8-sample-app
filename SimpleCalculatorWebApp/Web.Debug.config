<?xml version="1.0" encoding="utf-8"?>
<configuration xmlns:xdt="http://schemas.microsoft.com/XML-Document-Transform">
  <system.web>
    <!-- Enable detailed error messages for debugging -->
    <customErrors mode="Off" xdt:Transform="Replace" />
    
    <!-- Enable compilation debug for development -->
    <compilation debug="true" xdt:Transform="SetAttributes(debug)" />
    
    <!-- Enable trace for debugging -->
    <trace enabled="true" xdt:Transform="Replace" />
  </system.web>

  <appSettings>
    <add key="EnableDetailedErrors" value="true" xdt:Transform="Replace" xdt:Locator="Match(key)" />
  </appSettings>
</configuration>